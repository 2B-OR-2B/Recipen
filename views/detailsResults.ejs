<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./styles/styles.css">
    <link rel="stylesheet" href="./styles/details.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <title>Recipen</title>
</head>

    

<body>
    <%- include('./layout/nav.ejs')%>
    <main class="detailsMain">
        <div class="idImage">
            <h2><%=obj.name%></h2>
        </div>
        <div id="details">
            <div class="colcontainer">
                
                <div id="picture">
    
                    <img src="<%=obj.img_url%>">
                </div>
    
                <div class="ing">
                    <h3>Ingredients</h3>
                    <ul>
                        <%obj.ingredients.split(',').forEach(item=>{%>
                        <li><%=item%></li>
                        <%})%>
                    </ul>
                </div>
            </div>

            <div id="steps">
                <h3>Steps:</h3>
                <ol>
                    <%obj.steps.split('. ').forEach(item=>{%>
                    <li><%=item%></li>
                    <%})%>
                </ol>

            </div>
        </div>
        <div class="video">
            <% if(obj.vid_url){
                let vid = obj.vid_url;

                let ext=vid.indexOf('v=') !== -1 ? vid.substring(vid.indexOf('v=')+2) 
                                                 : vid.substring(vid.indexOf('be/')+3);
                let url = `https://www.youtube.com/embed/${ext}`
                %>
            <iframe width="560" height="315" src="<%= url%> " frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
            <% } %>
        </div>
    </main>
    <%- include('./layout/footer.ejs') %>
    <script src="./js/app.js"></script>
</body>

</html>